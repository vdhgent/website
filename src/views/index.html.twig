<!doctype html>

<html lang="en">
<head>
    <meta charset="UTF-8">

    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>Thomas Vanderhaeghen | PHP freelancer and consultant</title>

    <meta name="description" content="Thomas Vanderhaeghen, PHP freelancer and consultant">
    <meta name="author" content="Thomas Vanderhaeghen">

    <meta name="og:title" property="og:title" content="Thomas Vanderhaeghen, PHP freelancer and consultant">
    <meta name="twitter:card" content="Thomas Vanderhaeghen, PHP Freelancer">

    <link href="https://fonts.googleapis.com/css?family=Merriweather+Sans:300,400,700,800|Merriweather:400,700,900|Montserrat:400,500,600,700,800,900&display=swap" rel="stylesheet">

    <link href="/style.css" rel="stylesheet" type="text/css">

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#000000">
    <meta name="msapplication-TileColor" content="#222222">
    <meta name="theme-color" content="#ffffff">
</head>
<body {% if settings.withBackgroundImage %}class="with-background-image"{% endif %}>
    <header>
        <h1>Thomas Vanderhaeghen</h1>
        <h2>PHP FREELANCER AND CONSULTANT</h2>
    </header>

    <div class="container">
        <div class="aside-wrapper">
            <aside>
                <section class="profile">
                    <img src="/images/profile.jpeg" alt="Profile picture" />
                </section>
                <nav>
                    <ul>
                        <li{% if page == 'about' %} class="active"{% endif %}>
                            <a href="/about" onclick="return pagination.onPageClick(this)">
                                <span>About</span><i class="fas fa-address-card"></i>
                            </a>
                        </li>
                        <li{% if page == 'services' %} class="active"{% endif %}>
                            <a href="/services" onclick="return pagination.onPageClick(this)">
                                <span>Services</span><i class="fas fa-concierge-bell"></i>
                            </a>
                        </li>
                        <li{% if page == 'skills' %} class="active"{% endif %}>
                            <a href="/skills" onclick="return pagination.onPageClick(this)">
                                <span>Skills</span><i class="fas fa-blender-phone"></i>
                            </a>
                        </li>
                        <li{% if page == 'contact' %} class="active"{% endif %}>
                            <a href="/contact" onclick="return pagination.onPageClick(this)">
                                <span>Contact</span><i class="fas fa-phone"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
                {% include '_footer.html.twig' %}
            </aside>
        </div>
        <main>
            {% include (page ~ '.html.twig') %}
        </main>
        {% include '_footer.html.twig' %}
    </div>

    {% if debug is not defined or not debug %}
        <script src="/bundle/bundle-min.js"></script>
    {% else %}
        <script src="/js/cookies.js"></script>
        <script src="/js/captcha.js"></script>
        <script src="/js/settings.js"></script>
        <script src="/js/pagination.js"></script>
    {% endif %}
    <script src="https://www.google.com/recaptcha/api.js?render=explicit&onload=onCaptchaScriptLoaded" async defer></script>
</body>
</html>
